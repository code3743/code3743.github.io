---
interface Props {
  name: string;
  description: string;
  photo: string;
  socialMedia: SocialMedia[];
}
const { name, description, photo, socialMedia } = Astro.props;
const formattedDescription = description.split('*')
---

<header class="mx-auto container mt-16 text-center">
  <picture class="w-24">
    <img
      src={photo}
      alt="Imagen de perfil"
      width="96"
      height="96"
      class="rounded-full w-24 h-24 mx-auto"
    />
  </picture>
  <h1 class="font-bold text-xl mt-4">{name}</h1>
  <p class="text-base my-3">{formattedDescription.map(
    (text, index) => {
      if(index % 2) return <strong>{text}</strong>
      return text
    }
  )   }</p>
  <ul class="flex flex-wrap justify-center">
    {
      socialMedia.map((socialMedia) => (  
        <li class="w-10 h-10 m-1">
          <a href={socialMedia.url}>
            <img
              src={socialMedia.icon}
              alt={socialMedia.name}
              width="24"
              height="24"
              loading="lazy"
              class="rounded-full scale-125  hover:scale-150"
            />
          </a>
        </li>
      ))
    }
  </ul>
</header>

<style>
  strong {
    color: #3b82f6;
    font-weight: 600;
  }
</style>